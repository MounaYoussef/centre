{% extends 'base.html.twig' %}

{% block title %}Promotions index{% endblock %}

{% block body %}

    <h1>Promotions index</h1>

    <form method="post" action="{{ path('promotions_search') }}">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="prixMin">Prix min</label>
                <input type="text" class="form-control" name="prixMin" id="prixMin"  placeholder="Entrez votre prix">
            </div>

            <div class="form-group col-md-6">
                <label for="prixMax">Prix Max</label>
                <input type="text" class="form-control" name="prixMax" id="prixMax" placeholder="Entrez votre prix">
            </div>
        </div>
        <div class="col-md-12 text-center">
            <button class="btn btn-success" style="margin-bottom: 20px" type="submit">Rechercher</button>
        </div>
    </form>



    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Datefin</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.id }}</td>
                <td>{{ result.nom }}</td>
                <td>{{ result.prix }}</td>
                <td>{{ result.datefin }}</td>
                <td>
                    <a href="{{ path('promotions_show', {'id': result.id}) }}">show</a>
                    <a href="{{ path('promotions_edit', {'id': result.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promotions_new') }}">Create new</a>
{% endblock %}
